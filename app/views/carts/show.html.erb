<% if @order_items.any? %>
  <% @order_items.each do |item| %>
  <div id="item<%=item.id%>">
    <p><%= item.product.name %> | <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"}, remote: true %></p>
    <p> Unit Price: <%= number_to_currency item.product.price %> | Quantity: <%= item.quantity %> | Total Price: <%= number_to_currency (item.product.price * item.quantity) %></p>
  </div>
  <% end %>
    <p>Your Total: <span class="price-container"> <%= render 'order_items/price' %></span></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>

<%= link_to 'Checkout', products_path, class: 'btn btn-primary', remote: true %>
<%= link_to 'Clear Cart', cart_path(@order), :data => {:method => 'delete'}, class: 'btn btn-danger' %>
