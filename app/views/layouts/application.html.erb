<!DOCTYPE html>
<html>
  <head>
    <title>BetterGamestop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Gamestop V2</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'Home', products_path, class: 'nav-link' %>
        </li>
        <% if current_user %>
        <li class="nav-item active">
          <%= link_to 'Order History', history_path, :data => {:method => 'get'}, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Log Out', destroy_user_session_path, :data => {:method => 'delete'}, class: 'nav-link' %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Log In', new_user_session_path, class: 'nav-link' %>
        </li>
        <% end  %>
      </ul>
      <ul class='navbar-nav ml-auto'>
        <% if current_user %>
        <li class="nav-item">
          <span class="nav-link"><%=current_user.email %></span>
        </li>
        <% end %>
        <li class='nav-item'>
          <li class="nav-link">
            <span class=" amount-container"><%= render 'order_items/cart_amount' %></span>
          </li>
        </li>
        <li class="nav-item">
          <li class="nav-link">
            <span class="price-container"><%= render 'order_items/price' %></span>
          </li>
        </li>
        <li class="nav-item">
          <%= link_to cart_path, class: 'nav-link' do %>
            <%= inline_svg 'cart.svg'  %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
  <body>
    <div class="container">
      <div class="flash_message">

      </div>
      <%= yield %>
    </div>
  </body>
</html>
